<!DOCTYPE html>
<html lang="en">

	<head> 
		<meta charset= "utf-8">
		<meta name="viewport" 
		content = "width = device-width , initial-scale=1.0">
	<title>Techno Green</title>
	<link rel="stylesheet" href="../css/style.css" type="text/css">
	</head>

	<body>
		<%- include ('./headerSavedConnection.ejs') %>
        <%- include ('./navigation.ejs') %>

		<section class="mainpart">

			<div class="content">
				<h1> Alice connections</h1>
			<table class="General">
				<tr>
					<th>Connections</th>
					<th>Group</th>
					<th>Going?</th>
					<th>Status</th>
				</tr>
				
				<tbody>
					<% for(var i = 0; i < userEvents.length; i++) { %>
					<tr>
						<td><%= userEvents[i].meetupName %></td>
						<td><%= userEvents[i].topic %></td>
						<td><%= userEvents[i].rsvp %></td>
						<!-- <% console.log(userEvents[i].meetupId ); %> -->
						<td>
							<button type="submit" onclick="window.location.href='/connections?meetupId=<%= userEvents[i].meetupId %>'"> Update</button>
							<button type="submit" onclick="window.location.href='/savedConnections/delete?meetupId=<%= userEvents[i].meetupId %>'"> Delete</button>
						</td>
					</tr>
					<% } %>
				</tbody>
			  </table>
			</div>
		</section>
    <%- include ('./footer.ejs') %>
	</body>
</html>									
